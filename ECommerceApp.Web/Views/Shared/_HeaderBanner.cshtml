@model ECommerceApp.Web.Models.HomeIndexViewModel

<header>
    <!--  Start popular cat  -->
    <section class="tc-popular-cat-style1 pt-30 pb-50">
        <div class="container">
            <div class="search-cat d-block d-lg-none">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search anything...">
                    <a href="/" class="search-btn"> <i class="fal fa-search"></i> </a>
                </div>
            </div>
            <div class="sec-title">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <h3 class="fsz-24 text-capitalize"> Categories </h3>
                    </div>
                    <div class="col-lg-6 text-lg-end mt-4 mt-lg-0">
                        <a href="#0" class="more-link text-capitalize"> View All <i class="la la-angle-right ms-1"></i> </a>
                    </div>
                </div>
            </div>
            <div class="cat-content">
                @if (Model.Categories != null)
                {
                    @foreach (var category in Model.Categories)
                    {
                        <a href="/Products?category=@category.Slug" class="cat-card"> 
                            <div class="img">
                                @if (!string.IsNullOrEmpty(category.ImageUrl))
                                {
                                    <img src="@category.ImageUrl" alt="@category.Name">
                                }
                                else
                                {
                                    <img src="~/swoo/home_electronic/assets/img/cat/cat1.png" alt="@category.Name">
                                }
                            </div>
                            <p class="fsz-13 fw-bold mt-15"> @category.Name </p>
                        </a>
                    }
                }
                else
                {
                    <!-- Fallback when no categories are available -->
                    <div class="col-12 text-center">
                        <p class="text-muted">No categories available at the moment.</p>
                    </div>
                }
            </div>
        </div>
    </section>
    <!--  End popular cat  -->


