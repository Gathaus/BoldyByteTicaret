@model ECommerceApp.Web.Models.NavbarViewModel

    <!--  Start top navbar  -->
    <div class="tc-top-navbar-style1 py-3 bg-blue1 text-white text-center">
        <div class="container">
            <p> <span class="small rounded-pill bg-white color-000 me-1 px-2 fw-bold"> Özel </span> İlk siparişinizde %10  <strong class="text-uppercase"> İndirim  </strong> fırsatı <a href="/Auth/Register" class="ms-3 text-decoration-underline fst-italic"> Hemen Kayıt Ol </a> </p>
        </div>
    </div>
    <!--  End top navbar  -->

    <!--  Start navbar  -->
    <nav class="navbar tc-navbar-style1 navbar-expand-lg navbar-light">
        <div class="container" style="display: block">
            <div class="content">
                <a class="navbar-brand" href="/">
                    <img src="~/swoo/home_electronic/assets/img/logo.png" alt="" class="logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="search-cat d-none d-lg-block">
                    <div class="input-group">
                        <select name="category" class="form-select">
                            <option value=""> Tüm Kategoriler </option>
                            @if (Model?.MainCategories != null && Model.MainCategories.Any())
                            {
                                @foreach (var category in Model.MainCategories.Where(c => c.IsActive).OrderBy(c => c.SortOrder))
                                {
                                    <option value="@category.Slug"> @category.Name </option>
                                }
                            }
                        </select>
                        <input type="text" class="form-control" placeholder="Ürün, kategori veya marka ara...">
                        <a href="#" class="search-btn"> <i class="fas fa-search"></i> </a>
                    </div>
                </div>
                <div class="hot-line">
                    <span class="icon"> <i class="las la-tty"></i> </span>
                    <div class="inf">
                        <small class="fsz-13 d-block"> Müşteri Hizmetleri </small>
                        <h6 class="fsz-20 color-blue1 fw-bold"> <a href="tel:08502220000"> 0850 222 00 00 </a> </h6>
                    </div>
                </div>
                <div class="icons">
                    <a href="/" title="Favoriler"> <i class="lar la-heart"></i> <span class="dot"></span> </a>
                    <a href="/Profile" title="Hesabım"> <i class="la la-user"></i> </a>
                    <a href="/Cart" title="Sepetim"> <i class="la la-shopping-cart"></i> 
                        @if (Model.CartItemCount > 0)
                        {
                            <span class="num"> @Model.CartItemCount </span>
                        }
                    </a>
                </div>
            </div>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mt-3">
                    <!-- Kategoriler Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="dropdown-toggle nav-link fw-bold" href="/Products" id="navbarDropdownCategories" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-th-large me-2"></i> Kategoriler
                        </a>
                        <ul class="dropdown-menu mega-menu" aria-labelledby="navbarDropdownCategories">
                            @if (Model?.MainCategories != null && Model.MainCategories.Any())
                            {
                                @foreach (var category in Model.MainCategories.Where(c => c.IsActive).OrderBy(c => c.SortOrder))
                                {
                                    <li class="dropdown-submenu">
                                        <a class="dropdown-item dropdown-toggle" href="/Products?category=@category.Slug">
                                            <strong>@category.Name</strong>
                                        </a>
                                        @if (category.Children != null && category.Children.Any())
                                        {
                                            <ul class="dropdown-menu">
                                                @foreach (var subCategory in category.Children.Where(c => c.IsActive).OrderBy(c => c.SortOrder))
                                                {
                                                    <li><a class="dropdown-item" href="/Products?category=@subCategory.Slug">@subCategory.Name</a></li>
                                                }
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item fw-bold text-primary" href="/Products?category=@category.Slug">Tüm @category.Name</a></li>
                                            </ul>
                                        }
                                    </li>
                                }
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item fw-bold text-success" href="/Products"><i class="fas fa-list me-2"></i>Tüm Kategoriler</a></li>
                            }
                        </ul>
                    </li>
                    
                    <!-- Diğer Menü Öğeleri -->
                    <li class="nav-item">
                        <a class="nav-link" href="/Products"><i class="fas fa-fire me-2"></i>Hakkımızda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Products?featured=true"><i class="fas fa-star me-2"></i>Öne Çıkanlar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Contact"><i class="fas fa-envelope me-2"></i>İletişim</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!--  End navbar  -->

    <!--  Start links-nav  -->
    <div class="tc-links-nav-style1 d-none d-lg-block">
        <div class="container">
            <div class="row g-0">
                <div class="col-lg-6">
                    <div class="links">
                        <ul class="links-ul">
                            <li>
                                <a href="/"> <i class="la la-grip-lines"></i> </a>
                            </li>
                            <!-- Kategoriler Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="dropdown-toggle" href="/Products" id="navbarDropdownLinksCategories" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-th-large me-1"></i> Kategoriler
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownLinksCategories">
                                    @if (Model?.MainCategories != null && Model.MainCategories.Any())
                                    {
                                        @foreach (var category in Model.MainCategories.Where(c => c.IsActive).OrderBy(c => c.SortOrder).Take(8))
                                        {
                                            <li><a class="dropdown-item" href="/Products?category=@category.Slug"><strong>@category.Name</strong></a></li>
                                        }
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item fw-bold text-primary" href="/Products">Tüm Kategoriler</a></li>
                                    }
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="" href="/Products"><i class="fas fa-fire me-1"></i> Fırsatlar</a>
                            </li>
                            <li class="nav-item">
                                <a class="" href="/Contact"><i class="fas fa-envelope me-1"></i> İletişim</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="nav-side d-flex align-items-center justify-content-end">
                        <div class="links">
                            <ul class="links-ul">
                                <li>
                                    <a href="/"> <i class="fas fa-store me-2"></i> Satıcı Ol </a>
                                </li>
                                <li>
                                    <a href="/"> <i class="fas fa-shipping-fast me-3"></i> Sipariş Takibi </a>
                                </li>
                                <li>
                                    <a href="/"> <i class="fas fa-headset me-3"></i>Yardım & Destek </a>
                                </li>
                            </ul>
                        </div>
                        <div class="links lang-links">
                            <ul class="links-ul">
                                <li class="dropdown">
                                    <a class="dropdown-toggle" href="/" id="navbarDropdown333" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="la la-lira-sign me-1"></i> TRY
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown333">
                                      <li><a class="dropdown-item" href="/">TRY</a></li>
                                      <li><a class="dropdown-item" href="/">USD</a></li>
                                      <li><a class="dropdown-item" href="/">EUR</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a class="dropdown-toggle" href="/" id="navbarDropdown4" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <img src="~/swoo/home_electronic/assets/img/tr.png" alt="" class="me-2 icon-15"> TR
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown4">
                                      <li><a class="dropdown-item" href="/">Türkçe</a></li>
                                      <li><a class="dropdown-item" href="/">English</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--  End links-nav  -->